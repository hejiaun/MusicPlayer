<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.administrator.musicplayer.view.BillTitleView xmlns:myXml="http://schemas.android.com/apk/res/com.example.administrator.musicplayer"
            android:id="@+id/btv_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            myXml:title="主打榜单"></com.example.administrator.musicplayer.view.BillTitleView>

        <com.example.administrator.musicplayer.view.BillItemView
            android:id="@+id/biv_hotSong"
            style="@style/item_songList"></com.example.administrator.musicplayer.view.BillItemView>

        <com.example.administrator.musicplayer.view.BillItemView
            android:id="@+id/biv_newSong"
            style="@style/item_songList"></com.example.administrator.musicplayer.view.BillItemView>

        <com.example.administrator.musicplayer.view.BillTitleView xmlns:myXml="http://schemas.android.com/apk/res/com.example.administrator.musicplayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            myXml:title="分类榜单"></com.example.administrator.musicplayer.view.BillTitleView>

        <com.example.administrator.musicplayer.view.BillItemView
            android:id="@+id/biv_chineseSong"
            style="@style/item_songList"></com.example.administrator.musicplayer.view.BillItemView>

        <com.example.administrator.musicplayer.view.BillItemView
            android:id="@+id/biv_EuropeSong"
            style="@style/item_songList"></com.example.administrator.musicplayer.view.BillItemView>

        <com.example.administrator.musicplayer.view.BillItemView
            android:id="@+id/biv_filmSong"
            style="@style/item_songList"></com.example.administrator.musicplayer.view.BillItemView>

        <com.example.administrator.musicplayer.view.BillItemView
            android:id="@+id/biv_loveSong"
            style="@style/item_songList"></com.example.administrator.musicplayer.view.BillItemView>

        <com.example.administrator.musicplayer.view.BillItemView
            android:id="@+id/biv_netSong"
            style="@style/item_songList"></com.example.administrator.musicplayer.view.BillItemView>

        <com.example.administrator.musicplayer.view.BillItemView
            android:id="@+id/biv_oldSong"
            style="@style/item_songList"></com.example.administrator.musicplayer.view.BillItemView>

        <com.example.administrator.musicplayer.view.BillItemView
            android:id="@+id/biv_rockSong"
            style="@style/item_songList"></com.example.administrator.musicplayer.view.BillItemView>

        <com.example.administrator.musicplayer.view.BillTitleView xmlns:myXml="http://schemas.android.com/apk/res/com.example.administrator.musicplayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            myXml:title="媒体榜单"></com.example.administrator.musicplayer.view.BillTitleView>

        <com.example.administrator.musicplayer.view.BillItemView
            android:id="@+id/biv_ktvSong"
            style="@style/item_songList"></com.example.administrator.musicplayer.view.BillItemView>

        <com.example.administrator.musicplayer.view.BillItemView
            android:id="@+id/biv_BillboardSong"
            style="@style/item_songList"></com.example.administrator.musicplayer.view.BillItemView>

        <com.example.administrator.musicplayer.view.BillItemView
            android:id="@+id/biv_hitChineseSong"
            style="@style/item_songList"></com.example.administrator.musicplayer.view.BillItemView>

        <com.example.administrator.musicplayer.view.BillItemView
            android:id="@+id/btv_chichaSong"
            style="@style/item_songList"></com.example.administrator.musicplayer.view.BillItemView>

    </LinearLayout>
</ScrollView>